#!/usr/bin/env bash

# Uninstall dotfiles (remove all symlinks)

set -e

echo "üóëÔ∏è  Uninstalling dotfiles..."
echo ""

cd "$(dirname "$0")"

PACKAGES=(
    "zsh"
    "nvim"
    "tmux"
    "scripts"
)

for package in "${PACKAGES[@]}"; do
    if [ -d "$package" ]; then
        echo "üì¶ Removing $package symlinks..."
        stow -D "$package" 2>/dev/null || echo "‚ö†Ô∏è  No symlinks found for $package"
        echo ""
    fi
done

echo "‚úÖ Dotfiles uninstalled!"
